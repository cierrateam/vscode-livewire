{
    "name": "livewire-vscode",
    "displayName": "Livewire Language Support",
    "description": "Snippets, Parameter Discovery, Syntax Highlighting and Formatting for Livewire",
    "publisher": "cierra",
    "version": "0.2.7",
    "license": "MIT",
    "icon": "images/logo.png",
    "private": true,
    "repository": "https://github.com/cierrateam/vscode-livewire",
    "author": {
        "name": "Vittorio Emmermann",
        "email": "vittorio@cierra.de"
    },
    "engines": {
        "vscode": "^1.37.0"
    },
    "categories": [
        "Programming Languages",
        "Snippets"
    ],
    "keywords": [
        "livewire",
        "laravel",
        "blade",
        "snippet",
        "highlighter"
    ],
    "activationEvents": [
        "onLanguage:blade"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "languages": [
            {
                "id": "blade",
                "aliases": [
                    "Blade",
                    "blade"
                ],
                "extensions": [
                    ".blade.php"
                ],
                "configuration": "./src/languages/blade.configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "blade",
                "scopeName": "text.html.php.blade",
                "path": "./src/syntaxes/blade.tmLanguage.json"
            },
            {
                "language": "html",
                "scopeName": "text.html.basic",
                "path": "./src/syntaxes/html.tmLanguage.json"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Blade Language",
            "properties": {
                "blade.format.enable": {
                    "type": "boolean",
                    "default": true,
                    "description": "Whether to enable/disable formatting."
                },
                "blade.newLine": {
                    "type": "boolean",
                    "default": true,
                    "description": "Insert an empty line at the end of file."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -p ./",
        "lint": "eslint src --ext ts",
        "watch": "tsc -watch -p ./",
        "package": "vsce package",
        "deploy": "vsce publish -p",
        "prune-branches": "git remote prune origin",
        "clean": "git clean -fdX"
    },
    "devDependencies": {
        "@types/glob": "^7.1.1",
        "@types/mocha": "^7.0.1",
        "@types/node": "^12.11.7",
        "@types/vscode": "^1.37.0",
        "@typescript-eslint/eslint-plugin": "^2.18.0",
        "@typescript-eslint/parser": "^2.18.0",
        "eslint": "^6.8.0",
        "glob": "^7.1.6",
        "mocha": "^7.0.1",
        "typescript": "^3.7.5",
        "vscode-test": "^1.3.0"
    }
}
