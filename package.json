{
    "name": "livewire-vscode",
    "displayName": "Livewire VSCode",
    "description": "Snippets, Syntax Highlighting and Formatting for VS Code",
    "publisher": "cierra",
    "version": "2.0.2",
    "author": {
        "name": "Vittorio Emmermann",
        "email": "vittorio@cierra.eu"
    },
    "engines": {
        "vscode": "^1.37.0"
    },
    "categories": [
        "Programming Languages",
        "Snippets"
    ],
    "keywords": [
        "livewire",
        "laravel",
        "blade",
        "snippet",
        "highlighter",
        "beautify"
    ],
    "activationEvents": [
        "onLanguage:livewire"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "languages": [
            {
                "id": "livewire",
                "aliases": [
                    "livewire"
                ],
                "extensions": [
                    ".blade.php"
                ],
                "configuration": "./src/languages/livewire.configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "livewire",
                "scopeName": "text.html.php.blade",
                "path": "./src/syntaxes/livewire.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "livewire",
                "path": "./src/snippets/snippets.json"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Livewire",
            "properties": {
                "livewire.format.enable": {
                    "type": "boolean",
                    "default": true,
                    "description": "Whether to enable/disable formatting."
                },
                "livewire.newLine": {
                    "type": "boolean",
                    "default": true,
                    "description": "Insert an empty line at the end of file."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "yarn run compile",
        "compile": "tsc -p ./",
        "lint": "eslint src --ext ts",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "devDependencies": {
        "@types/glob": "^7.1.1",
        "@types/mocha": "^7.0.1",
        "@types/node": "^12.11.7",
        "@typescript-eslint/eslint-plugin": "^2.18.0",
        "@typescript-eslint/parser": "^2.18.0",
        "eslint": "^6.8.0",
        "glob": "^7.1.6",
        "mocha": "^7.0.1",
        "typescript": "^3.7.5",
        "vscode": "^1.1.37",
        "vscode-test": "^1.3.0"
    },
    "dependencies": {
        "js-beautify": "^1.10.3"
    }
}
